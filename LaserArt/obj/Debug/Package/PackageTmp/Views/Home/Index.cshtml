                <img src="~/images/14.jpg" style="width:100%;">
            </div>
            <div class="item">
                <img src="~/images/16.jpg" style="width:100%;">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<div class="container jumbotron" style="padding-top:5px !important;">
    <div class="row" align="left">
        @ViewBag.Info
    </div>

   
        @{int i = 0; }
        @foreach (var category in Model)
        {

            if (i == 0 || i % 3 == 0)
            {
                @Html.Raw("<div class=\"row\" >");
            }
            <div id="@category.Id" class="col-md-4 item-div" align="center">
                <img style="width:100%; height:auto;" src="@category.ImageSource" />
                <p>@category.Name</p>
            </div>


         
            i++;
            if (i != 0 && i % 3 == 0 || i == Model.Count)
            {
                @Html.Raw("</div>")
            }
        }
       
</div>

